    "css-loader": "^0.23.0",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^2.6.0",
    "eslint": "^4.13.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-friendly-formatter": "^3.0.0",
